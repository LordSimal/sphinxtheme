<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/">
  <ShortName>{{ project }} Book {{ version }}</ShortName>
  <Description>The {{ project }} cookbook. CakePHP is an openly developed community applcation framework for PHP.</Description>
  <Image height="16" width="16" type="image/x-icon">{{ pathto('_static/favicon.ico', 1) }}</Image>  

  <Url type="text/html"
    method="get"
      template="{{ path('search.html') }}?q={searchTerms}&amp;check_keywords=yes&amp;area=default">
  </Url>
  <OutputEncoding>UTF-8</OutputEncoding>
  <InputEncoding>UTF-8</InputEncoding>
</OpenSearchDescription>
